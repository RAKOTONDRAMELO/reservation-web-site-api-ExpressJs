<div id="inscription" data-backdrop="false"  class="modal fade" style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif, Cochin, Georgia, Times, 'Times New Roman', sans-serif">
    <div class="modal-dialog " >
        <div class="modal-content ">
            <div class="modal-header">
                <button type="button"  class="close" data-dismiss="modal" data-toggle="modal" data-target="#connexion" >x</button>
            </div>
            <div class="modal-body">
                <form class="form" action="/inscription" method="POST">
                        <div class="form-group">
                        <input type="text" id="nom" name="nom" placeholder="Nom" class="form-control input-lg" required/>
                        </div>
                    <div class="form-group">
                        <input type="text" id="prénom" name="prenom" placeholder="Prénom" class="form-control input-lg" required/>
                    </div>
                        <div class="form-group">
                        <input type="text" id="adresse" name="adresse" placeholder="Adresse" class="form-control input-lg" required/>
                    </div>
                    <div class="form-group">
                        <input type="tel" id="tel" pattern="[0-9]{10}" name="tel" placeholder="Numéro de téléphone" class="form-control input-lg" required/>
                    </div>
                    <div class="form-group">
                        <input type="text" pattern="[0-9]{12}" id="cinIns" name="cin" placeholder="C.I.N" class="form-control input-lg" required/>
                    </div>
                    <div class="form-group">
                        <input type="password"  id="password" name="pass" placeholder="Mot de passe" class="form-control input-lg" required/>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="S'inscrire" class="btn btn-info col-xs-6" />
                        <input type="reset" class="btn btn-danger col-xs-6" />
                    </div>
                </form>
            </div>
    