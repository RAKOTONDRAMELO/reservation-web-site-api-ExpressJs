
<div id="M<%= moment(reservation.date).locale('fr-ca').format('L') %>"  data-backdrop="false" class="modal fade" style="background-color:black;font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif, Cochin, Georgia, Times, 'Times New Roman', sans-serif">
    <div class="modal-dialog " >
        <div class="modal-content " style="background-color:brown;">
            <form class="form" method="POST" >
                <div class="modal-header">
                    <button type="button" class="close" name="M<%= moment(reservation.date).locale('fr-ca').format('L') %>" data-dismiss="modal" onclick="arretModif(this.name)">x</button>
                    <h3>CONFIRMATION</h3>
                </div>
                <div class="modal-body"> 
                        <div class="form-group ">
                            <label for="cin">C.I.N</label>
                            <input type="text" value= "<%=reservation.cinClient %>"  name="cinClient"  class="form-control input-lg"  readonly/>                
                        </div>
                        <div class="form-group ">
                            <label for="color">Code couleur</label>
                            <input type="color" value= "<%=reservation.couleur %>"  name="color"  class="form-control input-lg"  readonly/>                
                        </div>
                        <div class="form-group ">
                            <label for="date">Date à réserver</label>
                            <input type="date"  min="" value= "<%=moment(reservation.date).locale('fr-ca').format('L') %>" id="dateAdminM<%= moment(reservation.date).locale('fr-ca').format('L') %>" name="date"  class="form-control input-lg"  readonly/>                
                        </div>
                        <div class="form-group ">
                            <label for="effectif">Effectif</label>
                            <input type="number" min="5" max="200" value= "<%=reservation.effectif %>"  name="effectif"  class="form-control input-lg"  readonly/>                
                        </div>
                        <div class="form-group ">
                            <label for="prix">Prix (Ar)</label>
                            <input type="number" value= "<%=reservation.prix %>"  name="prix"  class="form-control input-lg"  readonly/>                
                        </div>
                        <div class="form-group ">
                            <label for="confirmer">Confirmer?</label>
                            <% if (reservation.cinAdmin == 0) {var conf = "NON"} else {var conf = "OUI"} %>
                            <input type="text" value= "<%=conf %>"  name="confirmer"  class="form-control input-lg"  disabled/>                
                        </div>
                    <div class="form-group ">
                        <label for="pass">Mot de passe</label> 
                        <input type="password"  name="pass" class="form-control input-lg" required/>
                    </div>
                </div>

                <div class="modal-footer" >
                    <button class="btn btn-primary col-xs-3" name="M<%= moment(reservation.date).locale('fr-ca').format('L') %>" onclick="modifier(this.name)" type="button">
                        MODIFIER
                    </button>
                    <button class="btn btn-success col-xs-3" type="submit" formaction="/confirmer">
                        CONFIRMER
                    </button>
                    <button class="btn btn-info col-xs-3" type="submit" formaction="/supprimer">
                        SUPPRIMER
                    </button>
                    <button class="btn btn-danger col-xs-2" formaction="/annuler" type="submit">
                        ANNULER
                    </button>
                </div>
            </form>
            
        </div>
    </div>
</div>    